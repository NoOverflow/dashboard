        font-weight: normal;
        font-size: 40px;
        color: #FFFFFF;
    }

    p {
        width: 870px;
        margin-top: 75px;
        margin-left: 27px;
        font-family: Roboto;
        font-style: normal;
        font-weight: 300;
        font-size: 32px;
        color: #707070;
    }

    nav {
        float: right;
